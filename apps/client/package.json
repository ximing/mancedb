{
  "name": "@mancedb/client",
  "private": true,
  "version": "1.0.0",
  "description": "Desktop client for managing LanceDB databases",
  "author": "ManceDB",
  "license": "BSL-1.1",
  "type": "module",
  "main": "dist/main/index.js",
  "homepage": "https://github.com/mancedb/mancedb",
  "repository": {
    "type": "git",
    "url": "https://github.com/mancedb/mancedb.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "pnpm build:web && pnpm build:electron",
    "build:web": "cd ../web && ELECTRON=true pnpm build",
    "build:electron": "tsc -b && vite build",
    "build:all": "pnpm build && pnpm dist:all",
    "dist": "electron-builder --publish=never",
    "dist:all": "electron-builder -mwl --publish=never",
    "dist:mac": "electron-builder --mac --publish=never",
    "dist:win": "electron-builder --win --publish=never",
    "dist:linux": "electron-builder --linux --publish=never",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc -b --noEmit",
    "preview": "vite preview",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@mancedb/typescript-config": "workspace:*",
    "@types/node": "^22.13.14",
    "electron": "^35.7.5",
    "electron-builder": "^26.0.12",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.28.0",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.744.0",
    "@lancedb/lancedb": "^0.26.2",
    "@mancedb/dto": "workspace:*",
    "@mancedb/lancedb-core": "workspace:*",
    "electron-updater": "^6.7.3",
    "reflect-metadata": "^0.2.2",
    "typedi": "^0.10.0"
  }
}
